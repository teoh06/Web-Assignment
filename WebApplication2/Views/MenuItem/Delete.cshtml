@model List<WebApplication2.Models.MenuItem>
@{
    ViewBag.Title = Model.Count == 1 ? "Delete Menu Item" : "Bulk Delete Menu Items";
}

<style>
    .delete-card {
        background: var(--card-bg);
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(220, 53, 69, 0.1);
        border: 2px solid var(--danger-color);
        animation: fadeInDown 0.7s cubic-bezier(.39,.58,.57,1) both;
        margin-bottom: 2rem;
        overflow: hidden;
        position: relative;
    }

    @@keyframes fadeInDown {
        0% { opacity: 0; transform: translateY(-30px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    .delete-card-header {
        background: linear-gradient(135deg, var(--danger-color), #ff4757);
        color: var(--text-light);
        border-top-left-radius: 1.3rem;
        border-top-right-radius: 1.3rem;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
    }

    .delete-card-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 40%, transparent 50%);
        animation: shimmer 2s infinite;
    }

    @@keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .items-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
        padding: 1.5rem;
        margin: 1rem 0;
    }

    .item-card {
        background: var(--bg-secondary);
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
    }

    .item-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.2);
    }

    .item-image {
        position: relative;
        padding-top: 75%;
        overflow: hidden;
    }

    .item-image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .item-card:hover .item-image img {
        transform: scale(1.1);
    }

    .item-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent, rgba(0,0,0,0.7));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .item-card:hover .item-overlay {
        opacity: 1;
    }

    .item-details {
        padding: 1.5rem;
        min-height: 120px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .item-name {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.8rem;
        color: var(--text-primary);
        line-height: 1.4;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    .item-price {
        font-size: 1.3rem;
        color: var(--danger-color);
        font-weight: 700;
        margin-bottom: 0.5rem;
        white-space: nowrap;
        overflow: visible;
    }

    .item-category {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-top: auto;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .warning-box {
        background: linear-gradient(135deg, #ff6b6b11, #ff474711);
        border-left: 4px solid var(--danger-color);
        padding: 1.5rem;
        margin: 1.5rem;
        border-radius: 1rem;
        position: relative;
    }

    .warning-icon {
        position: absolute;
        top: -15px;
        left: -15px;
        background: var(--danger-color);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        animation: pulse 2s infinite;
    }

    .confirmation-section {
        background: var(--bg-secondary);
        padding: 2rem;
        border-radius: 1rem;
        margin: 1.5rem;
        text-align: center;
        border: 2px dashed var(--danger-color);
        position: relative;
    }

    .confirm-input {
        max-width: 300px;
        margin: 1.5rem auto;
        text-align: center;
        font-size: 1.2rem;
        padding: 0.8rem;
        border: 2px solid var(--border-color);
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .confirm-input:focus {
        border-color: var(--danger-color);
        box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.2);
    }

    .delete-btn {
        background: var(--danger-color);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .delete-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .delete-btn:not(:disabled):hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
    }

    .delete-btn::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, transparent, rgba(255,255,255,0.2), transparent);
        transform: translateX(-100%);
    }

    .delete-btn:not(:disabled):hover::after {
        transform: translateX(100%);
        transition: transform 0.6s ease;
    }

    .cancel-btn {
        background: transparent;
        color: var(--text-primary);
        border: 2px solid var(--border-color);
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        margin-left: 1rem;
    }

    .cancel-btn:hover {
        background: var(--bg-accent);
        border-color: var(--text-primary);
        transform: translateY(-2px);
    }

    .summary-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin: 1.5rem;
        padding: 1rem;
        background: var(--bg-accent);
        border-radius: 1rem;
    }

    .stat-item {
        text-align: center;
        padding: 1rem;
        background: var(--bg-secondary);
        border-radius: 0.8rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--danger-color);
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    @@media (max-width: 992px) {
        .items-container {
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1rem;
            padding: 1rem;
        }
    }

    @@media (max-width: 768px) {
        .items-container {
            grid-template-columns: 1fr;
            gap: 1rem;
            padding: 1rem;
        }

        .item-details {
            padding: 1.2rem;
            min-height: 100px;
        }

        .item-name {
            font-size: 1.1rem;
            margin-bottom: 0.6rem;
        }

        .item-price {
            font-size: 1.2rem;
        }

        .confirmation-section {
            padding: 1rem;
        }

        .delete-btn, .cancel-btn {
            width: 100%;
            margin: 0.5rem 0;
        }

        .summary-stats {
            grid-template-columns: 1fr;
            gap: 0.5rem;
            margin: 1rem;
            padding: 0.5rem;
        }
    }

    @@media (max-width: 480px) {
        .items-container {
            padding: 0.5rem;
        }

        .item-details {
            padding: 1rem;
        }

        .delete-card-header {
            padding: 1rem;
        }

        .warning-box {
            margin: 1rem;
            padding: 1rem;
        }
    }
</style>

<div class="container mt-4">
    <div class="delete-card">
        <div class="delete-card-header">
            <h3 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @(Model.Count == 1 ? "Confirm Deletion" : $"Bulk Delete ({Model.Count} Items)")
            </h3>
        </div>

        <div class="warning-box">
            <div class="warning-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <h4 class="text-danger mb-3">Warning: Permanent Action</h4>
            <p class="mb-0">
                You are about to permanently delete 
                @(Model.Count == 1 ? "this menu item" : $"{Model.Count} menu items"). 
                <strong>This action cannot be undone</strong> and all associated data will be permanently removed.
            </p>
        </div>

        @if (Model.Count > 1)
        {
            <div class="summary-stats">
                <div class="stat-item">
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Items to Delete</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">@Model.Where(i => i.Category != null).Select(i => i.Category.Name).Distinct().Count()</div>
                    <div class="stat-label">Categories Affected</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">@Model.Sum(i => i.Price).ToString("C", new System.Globalization.CultureInfo("en-MY"))</div>
                    <div class="stat-label">Total Value</div>
                </div>
            </div>
        }

        <div class="items-container">
            @foreach (var item in Model)
            {
                <div class="item-card">
                    <div class="item-image">
                        <img src="~/Images/@(item.PhotoURL ?? "default.jpg")" alt="@item.Name" />
                        <div class="item-overlay"></div>
                    </div>
                    <div class="item-details">
                        <div>
                            <div class="item-name">@item.Name</div>
                            <div class="item-price">@item.Price.ToString("C", new System.Globalization.CultureInfo("en-MY"))</div>
                        </div>
                        <div class="item-category">
                            <i class="fas fa-tag me-1"></i>
                            <span>@(item.Category != null ? item.Category.Name : "No Category")</span>
                            @if (item.Category == null)
                            {
                                <span class="badge bg-secondary">No Category</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="confirmation-section">
            <p>Type <strong>DELETE</strong> to confirm this action</p>
            
            <input type="text" 
                   id="confirmInput"
                   class="form-control confirm-input" 
                   placeholder="Type DELETE here"
                   autocomplete="off" />
            
            <form asp-action="Delete" method="post" id="deleteForm">
                @Html.AntiForgeryToken()
                @foreach (var item in Model)
                {
                    <input type="hidden" name="ids" value="@item.MenuItemId" />
                }
                
                <div class="d-flex flex-column flex-md-row justify-content-center gap-2 mt-4">
                    <button type="submit" class="delete-btn" id="deleteButton" disabled>
                        <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                    </button>
                    <a href="@Url.Action("Index")" class="cancel-btn">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const confirmInput = document.getElementById('confirmInput');
        const deleteButton = document.getElementById('deleteButton');
        const deleteForm = document.getElementById('deleteForm');

        confirmInput.addEventListener('input', function() {
            const isValid = this.value === 'DELETE';
            deleteButton.disabled = !isValid;
            
            if (isValid) {
                deleteButton.classList.add('animate__animated', 'animate__pulse');
            } else {
                deleteButton.classList.remove('animate__animated', 'animate__pulse');
            }
        });

        deleteForm.addEventListener('submit', function(e) {
            if (!confirm('This is your final warning. Are you absolutely sure you want to delete these items?')) {
                e.preventDefault();
            } else {
                deleteButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Deleting...';
                deleteButton.disabled = true;
            }
        });
    </script>
}
