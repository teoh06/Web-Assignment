@{
    ViewBag.Title = "Account Deletion Initiated";
}

<p>
    Your account deletion process has been initiated.
    An email has been sent to your registered email address to finalize the deletion.
    Please check your inbox (and spam folder).
</p>

<p>
    Remember, there is a grace period for account recovery.
</p>
<br>
<br>

@if (ViewBag.EmailError != null)
{
    <div class="alert alert-danger">
        <b>Email sending failed:</b> @ViewBag.EmailError
    </div>
}

<div>
    <a href="@Url.Action("Index", "Home")">Return to Home</a>
</div>

