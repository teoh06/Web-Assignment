@{
    ViewBag.Title = "Account Deletion Initiated";
}

<div class="page-container">
    <div class="create-form-container">

        <div class="alert fade-in-up">
            <i class="fas fa-info-circle"></i>
            <span>Your account deletion process has been initiated. An email has been sent to your registered email address to finalize the deletion. Please check your inbox (and spam folder).</span>
        </div>

        <div class="alert fade-in-up">
            <i class="fas fa-exclamation-triangle"></i>
            <span>Remember, there is a grace period for account recovery.</span>
        </div>

        @if (ViewBag.EmailError != null)
        {
            <div class="alert alert-danger fade-in-up">
                <i class="fas fa-exclamation-circle"></i>
                <b>Email sending failed:</b> @ViewBag.EmailError
            </div>
        }

        <div class="form-actions">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
</div>

