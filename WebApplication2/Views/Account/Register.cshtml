@model RegisterVM

@{
    ViewBag.Title = "Account | Register";
}

<form asp-action="Register" method="post" enctype="multipart/form-data" class="form">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly"></div>

    <label asp-for="Email"></label>
    <input asp-for="Email" autofocus>
    <span asp-validation-for="Email"></span>

    <label asp-for="Password"></label>
    <input asp-for="Password" autocomplete="new-password" />
    <span asp-validation-for="Password"></span>

    <label asp-for="Confirm"></label>
    <input asp-for="Confirm" autocomplete="new-password" />
    <span asp-validation-for="Confirm"></span>


    <label asp-for="Name"></label>
    <input asp-for="Name">
    <span asp-validation-for="Name"></span>

    <label asp-for="ProfilePicture"></label>
    <label class="upload">
        <small>Select Photo...</small>
        <input asp-for="ProfilePicture" accept="image/jpeg,image/png" hidden>
        <img src="/images/photo.jpg">
    </label>
    <span asp-validation-for="ProfilePicture"></span>

    <section>
        <button type="submit" class="btn btn-primary">Register</button>
        <button type="reset">Reset</button>
    </section>
</form>

@section foot {
    <script>
        $.validator.setDefaults({ ignore: '' });
    </script>
}
