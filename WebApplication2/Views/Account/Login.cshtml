@model LoginVM

@{
    ViewBag.Title = "Account | Login";
    var siteKey = ViewBag.SiteKey as string;
}

<div class="auth-container">
    <div class="auth-card">
        <!-- Header Section -->
        <div class="auth-header">
            <div class="auth-logo">
                <i class="fas fa-utensils"></i>
            </div>
            <h1 class="auth-title">Welcome Back</h1>
            <p class="auth-subtitle">Sign in to your QuickBite account</p>
        </div>

        @if (ViewBag.PendingVerificationEmail != null)
        {
            <div class="alert" role="alert" style="margin-bottom: 16px;">
                Your account is not verified yet. Please enter the verification code sent to <strong>@ViewBag.PendingVerificationEmail</strong>.
                <div class="mt-2">
                    <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("RequestOtp", "Account", new { email = (string)ViewBag.PendingVerificationEmail, action = "complete your login", returnUrl = Url.Action("Login", "Account") })">Resend Code</a>
                    <a class="btn btn-sm btn-primary ms-2" href="@Url.Action("VerifyOtp", "Account", new { email = (string)ViewBag.PendingVerificationEmail, action = "complete your login", returnUrl = Url.Action("Login", "Account") })">Enter Code</a>
                </div>
            </div>
        }

        <!-- Form Section -->
        <form class="auth-form" method="post">
            <div asp-validation-summary="ModelOnly" class="auth-validation-summary"></div>

            <!-- Email Field -->
            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope"></i>
                    Email Address
                </label>
                <input asp-for="Email" class="form-input" placeholder="Enter your email" autofocus>
                <span asp-validation-for="Email" class="field-validation"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group">
                <label asp-for="Password" class="form-label">
                    <i class="fas fa-lock"></i>
                    Password
                </label>
                <div class="password-field">
                    <input asp-for="Password" class="form-input" placeholder="Enter your password" autocomplete="current-password" id="passwordInput">
                    <span class="password-toggle" onclick="togglePasswordVisibility('passwordInput', this)">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="field-validation"></span>
            </div>

            <!-- Remember Me -->
            <div class="form-group remember-group">
                <label class="checkbox-label">
                    <input asp-for="RememberMe" type="checkbox" class="checkbox-input">
                    <span class="checkbox-custom"></span>
                    <span class="checkbox-text">Remember me for 14 days</span>
                </label>
            </div>

            <!-- reCAPTCHA -->
            @if (!string.IsNullOrEmpty(siteKey))
            {
                <div class="form-group recaptcha-group">
                    <div class="g-recaptcha" data-sitekey="@siteKey"></div>
                </div>
            }

            <!-- Submit Buttons -->
            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-sign-in-alt"></i>
                    Sign In
                </button>
                <button type="reset" class="btn-secondary">
                    <i class="fas fa-undo"></i>
                    Clear
                </button>
            </div>
        </form>

        <!-- Footer Links -->
        <div class="auth-footer">
            <p class="auth-links">
                Don't have an account? <a href="/Account/Register" class="auth-link">Create Account</a>
            </p>
            <p class="auth-links">
                Forgot your password? <a href="/Account/ResetPassword" class="auth-link">Reset Password</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @if (!string.IsNullOrEmpty(siteKey))
    {
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    }
    <script>
        // Reusable function to toggle password visibility
        function togglePasswordVisibility(inputId, iconSpan) {
            const passwordInput = document.getElementById(inputId);
            const icon = iconSpan.querySelector('i'); // Get the <i> element inside the span

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash'); // Change to eye-slash icon
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye'); // Change back to eye icon
            }
        }
    </script>
}