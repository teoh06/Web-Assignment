@{
    ViewBag.Title = "Account Deleted";
}

<div class="auth-container">
    <div class="auth-card" style="animation: fadeInUp 0.5s ease-out">
        <div class="auth-header">
            <div class="auth-logo">
                <i class="fas fa-user-slash"></i>
            </div>
            <h2 class="auth-title">Account Deleted</h2>
            <p class="auth-subtitle">Your account has been permanently removed</p>
        </div>
        
        <div class="auth-form" style="text-align: center">
            <div class="form-info">
                <i class="fas fa-info-circle"></i>
                <div class="info-content">
                    <p>What happens next?</p>
                    <ul>
                        <li>All your personal data has been permanently deleted</li>
                        <li>Your order history has been anonymized</li>
                        <li>You'll need to create a new account if you wish to return</li>
                    </ul>
                </div>
            </div>
            
            <div class="form-actions" style="margin-top: 2rem">
                <a href="/" class="btn-primary" style="text-decoration: none;">
                    <i class="fas fa-home"></i>
                    Return to Home
                </a>
            </div>
        </div>
        
        <div class="auth-footer">
            <div class="auth-links">
                Want to create a new account? <a href="/Account/Register" class="auth-link">Register here</a>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

