@model List<WebApplication2.Models.User>
@{
    ViewBag.Title = "Manage Users";
}

<h2>Manage Users</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Email</td>
                <td>@u.Name</td>
                <td>@u.Role</td>
                <td>
                    @if (u.IsPendingDeletion)
                    {
                        <span class="text-danger">Pending Deletion</span>
                    }
                    else
                    {
                        <span class="text-success">Active</span>
                    }
                </td>
                <td>
                    @if (!u.IsPendingDeletion)
                    {
                        <form asp-controller="Account" asp-action="Delete" method="post" style="display:inline">
                            <input type="hidden" name="email" value="@u.Email" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Account" asp-action="Restore" method="post" style="display:inline">
                            <input type="hidden" name="token" value="@u.DeletionToken" />
                            <button type="submit" class="btn btn-success btn-sm">Restore</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
