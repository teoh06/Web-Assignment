@model WebApplication2.Models.Category
@{
    ViewBag.Title = "Delete Category";
}
<main>
    <div class="create-form-container danger-zone" style="max-width:600px;margin:40px auto;">
        <div class="d-flex align-items-center mb-3">
            <span class="me-3" style="font-size:2rem;color:var(--danger-color)"><i class="fas fa-exclamation-triangle"></i></span>
            <h2 class="mb-0" style="color:var(--danger-color);font-family:'Victor Mono',monospace;">Delete Category</h2>
        </div>
        <p class="mb-2">Are you sure you want to delete this category? This action is <strong>permanent</strong> and cannot be undone.</p>
        <div class="alert">
            Deleting a category will <strong>not remove</strong> its menu items. Any items currently in this category will be moved to <strong>'Uncategorized'</strong> automatically.
        </div>
        <div class="mb-3"><strong>Category Name:</strong> @Model.Name</div>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-buttons">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-trash-alt me-2"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</main>
