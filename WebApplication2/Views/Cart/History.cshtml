@model List<Demo.Controllers.OrderHistoryVM>
@using System.Globalization;
@{
    ViewBag.Title = "My Orders";
}
<h2>My Orders</h2>
@if (!Model.Any())
{
    <p>You have not placed any orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.Date.ToString("g")</td>
                <td>@order.Status</td>
                <td>@order.Total.ToString("C", new CultureInfo("en-MY"))</td>
                <td>
                    <a href="@Url.Action("Receipt", "Cart", new { id = order.OrderId })" class="btn btn-sm btn-info">View Receipt</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
<a href="@Url.Action("Index", "MenuItem")" class="btn btn-secondary">Back to Menu</a>
