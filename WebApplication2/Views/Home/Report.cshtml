<div class="container">
    <form asp-controller="Home" asp-action="SubmitReport" method="post" enctype="multipart/form-data">
        <div class="row p-1">
            <label class="col-1 col-form-label" for="userInput">User</label>
            <div class="col-5">
                <input type="text" id="userInput" name="UserName" class="form-control" />
            </div>
        </div>
        <div class="row p-1">
            <label class="col-1 col-form-label" for="descriptionInput">Description</label>
            <div class="col-5">
                <textarea id="descriptionInput" name="Description" class="form-control" rows="4"></textarea>
            </div>
        </div>
        <div class="row p-1">
            <label class="col-1 col-form-label" for="fileInput">Attachments</label>
            <div class="col-5">
                <input type="file" id="fileInput" name="Attachments" multiple class="form-control" />
            </div>
        </div>
        <div class="row p-1">
            <div class="col-6 text-end">
                <input type="submit" value="Submit Report" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>