@{
    ViewBag.Title = "Privacy Policy";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Privacy Policy - QuickBite</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Victor+Mono:wght@400;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Header Section */
        .privacy-hero {
            background: var(--gradient-warm);
            padding: 80px 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
            border: none;
            border-radius: 0 0 20px 20px;
        }

            .privacy-hero::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" patternUnits="userSpaceOnUse" width="100" height="100"><circle cx="50" cy="50" r="2" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>') repeat;
                opacity: 0.3;
            }

        .privacy-hero-content {
            max-width: 800px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .privacy-title {
            font-family: "Victor Mono", monospace;
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: var(--text-light);
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .privacy-subtitle {
            font-size: 1.3rem;
            color: var(--text-light);
            margin-bottom: 30px;
            opacity: 0.95;
        }

        .last-updated {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: rgba(255, 255, 255, 0.15);
            padding: 12px 20px;
            border-radius: 50px;
            color: var(--text-light);
            font-weight: 500;
            backdrop-filter: blur(10px);
            box-shadow: var(--shadow-md);
        }

        /* Reading Progress */
        .reading-progress {
            position: fixed;
            top: 0;
            left: 0;
            width: 0;
            height: 4px;
            background: var(--gradient-warm);
            z-index: 1000;
            transition: width 0.3s ease;
        }

        /* Main Container */
        .privacy-container {
            max-width: 1200px;
            margin: -60px auto 0;
            padding: 0 20px 60px;
            position: relative;
            z-index: 3;
        }

        /* Table of Contents */
        .toc-container {
            background: var(--bg-primary);
            border-radius: 20px;
            box-shadow: var(--shadow-xl);
            padding: 40px;
            margin-bottom: 40px;
            border: 1px solid var(--border-light);
        }

        .toc-title {
            font-family: "Victor Mono", monospace;
            font-size: 2rem;
            margin-bottom: 30px;
            color: var(--primary-brand);
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .toc-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }

        .toc-item {
            background: var(--bg-secondary);
            border-radius: 12px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            display: flex;
            align-items: center;
            gap: 15px;
            text-decoration: none;
            color: var(--text-primary);
        }

            .toc-item:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-lg);
                border-color: var(--primary-brand);
                text-decoration: none;
                color: var(--text-primary);
            }

        .toc-icon {
            width: 50px;
            height: 50px;
            background: var(--gradient-warm);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-light);
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .toc-content h4 {
            margin: 0 0 5px 0;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .toc-content p {
            margin: 0;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        /* Privacy Sections */
        .privacy-section {
            background: var(--bg-primary);
            border-radius: 20px;
            box-shadow: var(--shadow-lg);
            padding: 50px;
            margin-bottom: 40px;
            border: 1px solid var(--border-light);
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.6s ease;
        }

            .privacy-section.visible {
                opacity: 1;
                transform: translateY(0);
            }

        .section-title {
            font-family: "Victor Mono", monospace;
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: var(--primary-brand);
            display: flex;
            align-items: center;
            gap: 20px;
        }

            .section-title i {
                width: 60px;
                height: 60px;
                background: var(--gradient-warm);
                border-radius: 15px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--text-light);
                font-size: 1.5rem;
            }

        /* Data Types Grid */
        .data-types-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 25px;
            margin: 30px 0;
        }

        .data-type-card {
            background: var(--bg-secondary);
            border-radius: 16px;
            padding: 30px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid transparent;
            position: relative;
            overflow: hidden;
        }

            .data-type-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: var(--gradient-warm);
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .data-type-card:hover {
                transform: translateY(-10px) scale(1.05);
                box-shadow: var(--shadow-xl);
                border-color: var(--primary-brand);
            }

                .data-type-card:hover::before {
                    opacity: 0.05;
                }

            .data-type-card i {
                font-size: 2.5rem;
                color: var(--primary-brand);
                margin-bottom: 20px;
                display: block;
                position: relative;
                z-index: 2;
            }

            .data-type-card h4 {
                font-size: 1.3rem;
                margin-bottom: 15px;
                color: var(--text-primary);
                position: relative;
                z-index: 2;
            }

            .data-type-card p {
                color: var(--text-secondary);
                margin: 0;
                position: relative;
                z-index: 2;
            }

        /* Interactive Cards */
        .interactive-card {
            background: linear-gradient(135deg, var(--bg-accent), var(--bg-secondary));
            border-radius: 16px;
            padding: 25px;
            margin: 25px 0;
            cursor: pointer;
            transition: all 0.3s ease;
            border-left: 5px solid var(--accent-green);
            position: relative;
            overflow: hidden;
        }

            .interactive-card::before {
                content: '';
                position: absolute;
                top: 0;
                right: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
                transition: right 0.6s ease;
            }

            .interactive-card:hover::before {
                right: 100%;
            }

            .interactive-card:hover {
                transform: translateX(10px);
                box-shadow: var(--shadow-lg);
            }

            .interactive-card h4 {
                display: flex;
                align-items: center;
                gap: 12px;
                margin-bottom: 15px;
                color: var(--text-primary);
                font-size: 1.2rem;
            }

            .interactive-card i {
                color: var(--accent-green);
                font-size: 1.3rem;
            }

        /* Rights Checklist */
        .rights-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }

        .rights-item {
            background: var(--bg-secondary);
            border-radius: 12px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 20px;
            border: 2px solid transparent;
        }

            .rights-item:hover {
                transform: translateY(-3px);
                box-shadow: var(--shadow-md);
                border-color: var(--accent-green);
            }

        .rights-checkbox {
            width: 50px;
            height: 50px;
            background: var(--accent-green);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-light);
            font-size: 1.5rem;
            font-weight: bold;
            flex-shrink: 0;
            transition: all 0.3s ease;
        }

            .rights-checkbox.unchecked {
                background: var(--border-medium);
                color: transparent;
            }

        .rights-text strong {
            color: var(--text-primary);
            font-size: 1.1rem;
        }

        .rights-text {
            color: var(--text-secondary);
            line-height: 1.5;
        }

        /* Contact Card */
        .contact-card {
            margin-top: 20px;
            background: var(--gradient-warm);
            border-radius: 20px;
            padding: 40px;
            color: var(--text-light);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .contact-card::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
                animation: float 20s ease-in-out infinite;
            }

        @@keyframes float {
            0%, 100% {
                transform: translate(-50%, -50%) rotate(0deg);
            }

            50% {
                transform: translate(-50%, -50%) rotate(180deg);
            }
        }

        .contact-card h3 {
            font-size: 2rem;
            margin-bottom: 15px;
            position: relative;
            z-index: 2;
        }

        .contact-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            margin-top: 30px;
            position: relative;
            z-index: 2;
        }

        .contact-method {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 25px;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

            .contact-method:hover {
                transform: translateY(-5px);
                background: rgba(255, 255, 255, 0.2);
            }

            .contact-method i {
                font-size: 2rem;
                margin-bottom: 15px;
                display: block;
            }

            .contact-method h4 {
                margin-bottom: 10px;
                font-size: 1.2rem;
            }

        /* Scroll to Top Button */
        .scroll-to-top {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            background: var(--gradient-warm);
            color: var(--text-light);
            border: none;
            border-radius: 50%;
            font-size: 1.2rem;
            cursor: pointer;
            box-shadow: var(--shadow-lg);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            z-index: 1000;
        }

            .scroll-to-top.visible {
                opacity: 1;
                visibility: visible;
            }

            .scroll-to-top:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-xl);
            }

        /* Notification System */
        .notification-container {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1001;
        }

        .notification {
            background: var(--accent-green);
            color: var(--text-light);
            padding: 15px 25px;
            border-radius: 10px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 10px;
            opacity: 0;
            transform: translateY(-30px);
            transition: all 0.3s ease;
        }

            .notification.show {
                opacity: 1;
                transform: translateY(0);
            }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .privacy-title {
                font-size: 2.5rem;
            }

            .privacy-section {
                padding: 30px 20px;
            }

            .section-title {
                font-size: 2rem;
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .toc-container {
                padding: 30px 20px;
            }

            .data-types-grid {
                grid-template-columns: 1fr;
            }

            .rights-grid {
                grid-template-columns: 1fr;
            }

            .contact-info {
                grid-template-columns: 1fr;
            }
        }

        /* Accessibility */
        @@media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }

        /* Focus styles for keyboard navigation */
        .toc-item:focus,
        .data-type-card:focus,
        .rights-item:focus,
        .interactive-card:focus {
            outline: 3px solid var(--primary-brand);
            outline-offset: 2px;
        }
    </style>
</head>

<body>
    <!-- Reading Progress Bar -->
    <div class="reading-progress" id="progressBar"></div>

    <!-- Hero Section -->
    <div class="privacy-hero">
        <div class="privacy-hero-content">
            <h1 class="privacy-title">Privacy Policy</h1>
            <p class="privacy-subtitle">Your privacy matters to us. Learn how we protect and use your information.</p>
            <div class="last-updated">
                <i class="fas fa-calendar-alt"></i>
                Last Updated: August 2025
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="privacy-container">
        <!-- Table of Contents -->
        <div class="toc-container">
            <h2 class="toc-title">
                <i class="fas fa-compass"></i>
                Quick Navigation
            </h2>
            <div class="toc-grid">
                <a href="#introduction" class="toc-item" onclick="scrollToSection('introduction')">
                    <div class="toc-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="toc-content">
                        <h4>Introduction</h4>
                        <p>Welcome to QuickBite's privacy commitment</p>
                    </div>
                </a>
                <a href="#data-collection" class="toc-item" onclick="scrollToSection('data-collection')">
                    <div class="toc-icon">
                        <i class="fas fa-database"></i>
                    </div>
                    <div class="toc-content">
                        <h4>Data We Collect</h4>
                        <p>Information we gather to serve you better</p>
                    </div>
                </a>
                <a href="#data-usage" class="toc-item" onclick="scrollToSection('data-usage')">
                    <div class="toc-icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                    <div class="toc-content">
                        <h4>How We Use Data</h4>
                        <p>Ways we utilize your information</p>
                    </div>
                </a>
                <a href="#data-sharing" class="toc-item" onclick="scrollToSection('data-sharing')">
                    <div class="toc-icon">
                        <i class="fas fa-share-alt"></i>
                    </div>
                    <div class="toc-content">
                        <h4>Data Sharing</h4>
                        <p>When and how we share information</p>
                    </div>
                </a>
                <a href="#your-rights" class="toc-item" onclick="scrollToSection('your-rights')">
                    <div class="toc-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="toc-content">
                        <h4>Your Rights</h4>
                        <p>Control over your personal data</p>
                    </div>
                </a>
                <a href="#contact" class="toc-item" onclick="scrollToSection('contact')">
                    <div class="toc-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="toc-content">
                        <h4>Contact Us</h4>
                        <p>Get in touch with our privacy team</p>
                    </div>
                </a>
            </div>
        </div>

        <!-- Introduction Section -->
        <section class="privacy-section" id="introduction">
            <h2 class="section-title">
                <i class="fas fa-info-circle"></i>
                Introduction
            </h2>
            <div class="section-content">
                <p>Welcome to QuickBite! We're committed to protecting your privacy and ensuring you have a positive experience on our platform. This Privacy Policy explains how we collect, use, and safeguard your personal information when you use our food ordering service.</p>

                <div class="interactive-card" onclick="toggleCard(this)">
                    <h4><i class="fas fa-lightbulb"></i> Why This Matters</h4>
                    <p>Your trust is essential to our business. We believe in transparency about our data practices and your control over your personal information.</p>
                </div>

                <p>By using QuickBite, you agree to the collection and use of information in accordance with this policy. We will not use or share your information with anyone except as described in this Privacy Policy.</p>
            </div>
        </section>

        <!-- Data Collection Section -->
        <section class="privacy-section" id="data-collection">
            <h2 class="section-title">
                <i class="fas fa-database"></i>
                Information We Collect
            </h2>
            <div class="section-content">
                <p>We collect several types of information to provide and improve our service to you:</p>

                <div class="data-types-grid">
                    <div class="data-type-card" onclick="highlightCard(this)" tabindex="0">
                        <i class="fas fa-user"></i>
                        <h4>Personal Information</h4>
                        <p>Name, email, phone number, delivery address, and profile preferences to personalize your experience.</p>
                    </div>
                    <div class="data-type-card" onclick="highlightCard(this)" tabindex="0">
                        <i class="fas fa-credit-card"></i>
                        <h4>Payment Data</h4>
                        <p>Credit card details and billing information, all securely encrypted and processed by trusted payment partners.</p>
                    </div>
                    <div class="data-type-card" onclick="highlightCard(this)" tabindex="0">
                        <i class="fas fa-shopping-cart"></i>
                        <h4>Order History</h4>
                        <p>Food preferences, order frequency, favorite restaurants, and dietary restrictions to enhance recommendations.</p>
                    </div>
                    <div class="data-type-card" onclick="highlightCard(this)" tabindex="0">
                        <i class="fas fa-mobile-alt"></i>
                        <h4>Device Information</h4>
                        <p>IP address, browser type, operating system, and app usage patterns for security and optimization.</p>
                    </div>
                    <div class="data-type-card" onclick="highlightCard(this)" tabindex="0">
                        <i class="fas fa-map-marker-alt"></i>
                        <h4>Location Data</h4>
                        <p>GPS coordinates for accurate delivery tracking and restaurant suggestions (only with your permission).</p>
                    </div>
                    <div class="data-type-card" onclick="highlightCard(this)" tabindex="0">
                        <i class="fas fa-star"></i>
                        <h4>Reviews & Ratings</h4>
                        <p>Restaurant reviews, food ratings, feedback comments, and interaction with community features.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Data Usage Section -->
        <section class="privacy-section" id="data-usage">
            <h2 class="section-title">
                <i class="fas fa-cogs"></i>
                How We Use Your Information
            </h2>
            <div class="section-content">
                <p>We use the collected information for various purposes to enhance your QuickBite experience:</p>

                <ul style="font-size: 1.1rem; line-height: 1.8; margin: 25px 0;">
                    <li><strong>Order Processing:</strong> To process and deliver your food orders efficiently and accurately</li>
                    <li><strong>Account Management:</strong> To create and maintain your user account and preferences</li>
                    <li><strong>Customer Support:</strong> To provide responsive customer service and resolve any issues</li>
                    <li><strong>Personalization:</strong> To recommend restaurants and dishes based on your taste preferences</li>
                    <li><strong>Communication:</strong> To send order updates, promotions, and important service notices</li>
                    <li><strong>Analytics:</strong> To improve our service quality and optimize the user experience</li>
                    <li><strong>Security:</strong> To prevent fraud, ensure platform security, and protect user accounts</li>
                    <li><strong>Legal Compliance:</strong> To comply with applicable laws and regulatory requirements</li>
                </ul>

                <div class="interactive-card" onclick="toggleCard(this)">
                    <h4><i class="fas fa-robot"></i> AI & Machine Learning</h4>
                    <p>We use artificial intelligence to provide smarter food recommendations, optimize delivery routes for faster service, and predict demand patterns to ensure fresh food availability. All AI processing respects your privacy preferences.</p>
                </div>
            </div>
        </section>

        <!-- Data Sharing Section -->
        <section class="privacy-section" id="data-sharing">
            <h2 class="section-title">
                <i class="fas fa-share-alt"></i>
                When We Share Information
            </h2>
            <div class="section-content">
                <p>We respect your privacy and limit data sharing to these specific, necessary situations:</p>

                <ul style="font-size: 1.1rem; line-height: 1.8; margin: 25px 0;">
                    <li><strong>Restaurant Partners:</strong> Order details and delivery information necessary to fulfill your orders</li>
                    <li><strong>Delivery Partners:</strong> Contact and location information required for successful delivery</li>
                    <li><strong>Payment Processors:</strong> Billing information to process payments securely through certified partners</li>
                    <li><strong>Service Providers:</strong> Trusted third parties who help us operate and improve our platform</li>
                    <li><strong>Legal Requirements:</strong> When required by law, court order, or to protect our legal rights</li>
                    <li><strong>Business Transfers:</strong> In the event of merger, acquisition, or sale of business assets</li>
                </ul>

                <div class="interactive-card" onclick="toggleCard(this)">
                    <h4><i class="fas fa-lock"></i> We Never Sell Your Data</h4>
                    <p>We do not sell, rent, or trade your personal information to third parties for marketing purposes. Your data is used solely to enhance your QuickBite experience and provide the services you expect.</p>
                </div>
            </div>
        </section>

        <!-- Your Rights Section -->
        <section class="privacy-section" id="your-rights">
            <h2 class="section-title">
                <i class="fas fa-shield-alt"></i>
                Your Privacy Rights
            </h2>
            <div class="section-content">
                <p>You have important rights regarding your personal information. Click on each right to learn more:</p>

                <div class="rights-grid">
                    <div class="rights-item" onclick="toggleRightCheck(this)" tabindex="0">
                        <div class="rights-checkbox" id="right1">✓</div>
                        <div class="rights-text">
                            <strong>Access:</strong> Request a copy of all personal data we have about you, including how it's used and stored.
                        </div>
                    </div>
                    <div class="rights-item" onclick="toggleRightCheck(this)" tabindex="0">
                        <div class="rights-checkbox" id="right2">✓</div>
                        <div class="rights-text">
                            <strong>Correction:</strong> Update or correct any inaccurate personal information in your profile or records.
                        </div>
                    </div>
                    <div class="rights-item" onclick="toggleRightCheck(this)" tabindex="0">
                        <div class="rights-checkbox" id="right3">✓</div>
                        <div class="rights-text">
                            <strong>Deletion:</strong> Request deletion of your personal data (right to be forgotten), subject to legal requirements.
                        </div>
                    </div>
                    <div class="rights-item" onclick="toggleRightCheck(this)" tabindex="0">
                        <div class="rights-checkbox" id="right4">✓</div>
                        <div class="rights-text">
                            <strong>Objection:</strong> Object to the processing of your data for certain purposes like marketing communications.
                        </div>
                    </div>
                    <div class="rights-item" onclick="toggleRightCheck(this)" tabindex="0">
                        <div class="rights-checkbox" id="right5">✓</div>
                        <div class="rights-text">
                            <strong>Portability:</strong> Receive your data in a machine-readable format to transfer to other services.
                        </div>
                    </div>
                    <div class="rights-item" onclick="toggleRightCheck(this)" tabindex="0">
                        <div class="rights-checkbox" id="right6">✓</div>
                        <div class="rights-text">
                            <strong>Consent:</strong> Withdraw your consent for data processing at any time through your account settings.
                        </div>
                    </div>
                </div>

                <div class="interactive-card" onclick="toggleCard(this)">
                    <h4><i class="fas fa-user-cog"></i> How to Exercise Your Rights</h4>
                    <p>To exercise any of these rights, simply contact us through the methods listed below. We typically respond to requests within 30 days and will verify your identity for security purposes.</p>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section class="privacy-section" id="contact">
            <h2 class="section-title">
                <i class="fas fa-envelope"></i>
                Contact Us
            </h2>
            <div class="section-content">
                <p>If you have any questions or concerns about this Privacy Policy, please don't hesitate to contact our dedicated privacy team.</p>

                <div class="contact-card">
                    <h3>We're Here to Help</h3>
                    <p>Your privacy inquiries are important to us. We will respond as quickly as possible.</p>

                    <div class="contact-info">
                        <div class="contact-method">
                            <i class="fas fa-envelope-open-text"></i>
                            <h4>Email</h4>
                            <p style="word-break: break-word;">bait2173.email@gmail.com</p>
                        </div>
                        <div class="contact-method">
                            <i class="fas fa-phone-alt"></i>
                            <h4>Phone</h4>
                            <p>+1 (555) 123-BITE</p>
                        </div>
                        <div class="contact-method">
                            <i class="fas fa-map-marker-alt"></i>
                            <h4>Address</h4>
                            <p>123 QuickBite Lane<br>Digital City, DC 12345</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Scroll to Top Button -->
    <button class="scroll-to-top" id="scrollToTop" onclick="scrollToTop()" aria-label="Scroll to top">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Notification Container -->
    <div class="notification-container" id="notificationContainer"></div>

    <script>
        // Notification System
        function showNotification(message, type = 'success') {
            const container = document.getElementById('notificationContainer');
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `<span>${message}</span>`;
            container.appendChild(notification);

            setTimeout(() => {
                notification.classList.add('show');
            }, 10);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }

        // Smooth Scrolling
        function scrollToSection(id) {
            const section = document.getElementById(id);
            if (section) {
                section.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
                showNotification(`Navigated to ${section.querySelector('h2').textContent}`, 'info');
            }
        }

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
            showNotification('Scrolled to top', 'success');
        }

        // Interactive Elements
        function highlightCard(card) {
            // Remove highlight from other cards
            document.querySelectorAll('.data-type-card').forEach(c => {
                c.style.transform = '';
                c.style.zIndex = '';
            });

            // Highlight clicked card
            card.style.transform = 'translateY(-15px) scale(1.08)';
            card.style.zIndex = '10';

            const cardTitle = card.querySelector('h4').textContent;
            showNotification(`Highlighted: ${cardTitle}`, 'info');

            // Reset after 3 seconds
            setTimeout(() => {
                card.style.transform = '';
                card.style.zIndex = '';
            }, 3000);
        }

        function toggleCard(card) {
            const content = card.querySelector('p');
            const isVisible = content.style.display !== 'none';

            if (isVisible) {
                content.style.display = 'none';
                card.style.opacity = '0.7';
                showNotification('Card collapsed', 'info');
            } else {
                content.style.display = 'block';
                card.style.opacity = '1';
                showNotification('Card expanded', 'info');
            }
        }

        function toggleRightCheck(item) {
            const checkbox = item.querySelector('.rights-checkbox');
            const isChecked = !checkbox.classList.contains('unchecked');

            if (isChecked) {
                checkbox.classList.add('unchecked');
                checkbox.textContent = '';
                showNotification('Right unchecked', 'warning');
            } else {
                checkbox.classList.remove('unchecked');
                checkbox.textContent = '✓';
                showNotification('Right acknowledged', 'success');
            }
        }

        // Scroll Effects
        window.addEventListener('scroll', () => {
            // Reading Progress Bar
            const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = (winScroll / height) * 100;
            document.getElementById('progressBar').style.width = scrolled + '%';

            // Scroll to Top Button
            const scrollToTopBtn = document.getElementById('scrollToTop');
            if (winScroll > 300) {
                scrollToTopBtn.classList.add('visible');
            } else {
                scrollToTopBtn.classList.remove('visible');
            }

            // Parallax effect for hero section
            const hero = document.querySelector('.privacy-hero');
            if (hero) {
                const scrollTop = window.pageYOffset;
                hero.style.transform = `translateY(${scrollTop * 0.5}px)`;
            }
        });

        // Initialize on page load
        window.addEventListener('DOMContentLoaded', () => {
            // Animate sections on scroll
            const sections = document.querySelectorAll('.privacy-section');
            const observerOptions = {
                root: null,
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const sectionObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                sectionObserver.observe(section);
            });

            // Initialize all rights as checked
            document.querySelectorAll('.rights-checkbox').forEach(checkbox => {
                checkbox.classList.remove('unchecked');
                checkbox.textContent = '✓';
            });

            // Keyboard navigation
            document.addEventListener('keydown', (e) => {
                switch(e.key) {
                    case 'Escape':
                        // Close any expanded cards
                        document.querySelectorAll('.interactive-card p').forEach(p => {
                            p.style.display = 'block';
                        });
                        break;
                    case 'Home':
                        if (e.ctrlKey) {
                            e.preventDefault();
                            scrollToTop();
                        }
                        break;
                }
            });

            // Add click animations
            document.querySelectorAll('.toc-item, .data-type-card, .rights-item').forEach(element => {
                element.addEventListener('click', function() {
                    this.style.animation = 'none';
                    this.offsetHeight; // Trigger reflow
                    this.style.animation = 'pulse 0.3s ease-in-out';
                });
            });

            // Welcome message
            setTimeout(() => {
                showNotification('Welcome to our Privacy Policy! 🍕', 'success');
            }, 1000);

            console.log('🍕 QuickBite Privacy Policy loaded successfully!');
        });

        // Add pulse animation
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes pulse {
                0% { transform: scale(1); }
                50% { transform: scale(1.02); }
                100% { transform: scale(1); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
